generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @unique @default(uuid())
  login      String     
  password   String
  version    Int        
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Artist {
  id         String     @id @unique @default(uuid())
  name       String
  grammy     Boolean
}

model Album {
  id         String     @id @unique @default(uuid())
  name       String
  year       Int
  artistId   String?     
}

model Track {
  id         String     @id @unique @default(uuid())
  name       String
  albumId    String?
  artistId   String?
  duration   Int     
}

model Favorites {
  id          String    @id @default(uuid())
  albums      String[]
  artists     String[]
  tracks      String[]
}

model RefreshToken {
  id          String @id @unique @default(uuid())
  userId      String @unique
  hashedRt    String
}